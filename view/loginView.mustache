<section class="bg-dark h-100">

  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://th.bing.com/th/id/R.a9b43019faa05e77eee142859d328f97?rik=TCnkwAe0niPaXQ&pid=ImgRaw&r=0&sres=1&sresct=1');
        height: 300px;
        "></div>
  <!-- Background image -->


  <div class="card mx-auto shadow-5-strong bg-body-tertiary " style="
        margin-top: -100px;
        backdrop-filter: blur(30px);
         width:60%">
    <div class="card-body py-5 px-md-9 bg-dark text-light p-3 ">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-5 w-90   ">
               {{#error}}
            <div class="alert alert-danger p-2" role="alert">
                <span>{{error}}</span>
            </div>
        {{/error}}
          <h2 class="fw-bold mb-3">Iniciar sesion</h2>

          <form action="/quizgame/usuario/procesarUsuario" method="post" >
            <!-- Email input -->
       
            <div class="form-outline" data-mdb-input-init>
            
            <input type="email" id="typeEmail" name="email" class="form-control text-white" />
            <label class="form-label text-white" for="typeEmail">Email</label>
          </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-2 mt-4">
            
          <input type="password" id="form2Example2" name="password" class="form-control text-white" />
          <label class="form-label text-white" for="form2Example2">Contrase√±a</label>
        </div>
            <!-- Submit button -->
            <button type="submit"  data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-2 w-100">
             Ingresar
            </button>

            <p>No tienes una cuenta? <a href="/quizgame/usuario/mostrarRegisterView" class="text-white">Registrarme</a></p>

          </form>
        </div>
      </div>
    </div>
  </div>
</section>
