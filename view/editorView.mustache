<div class="container mt-5">
    <!-- Pestañas -->
  <div class="pestañas">
  
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="preguntas-tab" data-bs-toggle="tab" data-bs-target="#preguntas" type="button" role="tab" aria-controls="preguntas" aria-selected="true">Preguntas</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="sugeridas-tab" data-bs-toggle="tab" data-bs-target="#sugeridas" type="button" role="tab" aria-controls="sugeridas" aria-selected="false">Sugeridas</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reportadas-tab" data-bs-toggle="tab" data-bs-target="#reportadas" type="button" role="tab" aria-controls="reportadas" aria-selected="false">Reportadas</button>
        </li>
    </ul>
  
  </div>

    <!-- Contenido de las pestañas -->
    <div class="tab-content" style="margin-top:15px;" id="myTabContent">
        <!-- Pestaña de Preguntas -->
        <div class="tab-pane fade show active" id="preguntas" role="tabpanel" aria-labelledby="preguntas-tab">
            {{#editorPreguntas}}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{pregunta}}</h5>
                        <p class="card-text"><strong>Estado:</strong>  {{#estado}}Habilitado{{/estado}}  {{^estado}}Deshabilitado{{/estado}}</p>
                        <p class="card-text"><strong>Opciones:</strong> <br> {{#opciones}} {{texto}} <br> {{/opciones}}</p>
                        <p class="card-text"><strong>Correcta:</strong> {{es_correcta}}</p>
                        <div class="d-flex justify-content-end gap-2">
                            <form action="/quizgame/editor/alterarPregunta" method="POST" style="display: inline;">
                                <input type="hidden" name="pregunta" value="{{id}}">

                                <button type="submit" class="btn btn-secondary btn-sm">{{#estado}}Desactivar{{/estado}}  {{^estado}}Activar{{/estado}}</button>
                            </form>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#reportModal-{{id}}">
                                Modificar
                            </button>
                        </div>
                    </div>
                </div>
             
                <!-- Modal para modificar la pregunta -->
                <div class="modal fade" id="reportModal-{{id}}" tabindex="-1" aria-labelledby="reportModalLabel-{{id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="reportModalLabel">Modificar Pregunta</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/quizgame/editor/modificarPregunta" method="POST">
                                    <div class="mb-3">
                                        <label for="pregunta" class="form-label">Pregunta</label>
                                        <input type="text" name="preguntaModificada" class="form-control" value="{{pregunta}}" required>
                                    </div>
                                        {{#opciones}}
                                            <label class="form-label">Opciones:</label>
                                            <div class="mb-3">
                                                <input type="text" name="opciones[]" class="form-control mb-2" value="{{texto}}" required>
                                                <label>
                                                    <input type="radio" name="es_correcta" value="{{index}}">
                                                    Correcta
                                                </label>
                                            </div>
                                        {{/opciones}}

                                    <input type="hidden" name="preguntaId" value="{{id}}">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-danger">Modificar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{/editorPreguntas}}
        </div>
        <!-- Pestaña de Sugeridas -->
        <div class="tab-pane fade" id="sugeridas" role="tabpanel" aria-labelledby="sugeridas-tab">
            <p>Contenido de preguntas sugeridas.</p>
        </div>
        <!-- Pestaña de Reportadas -->
        <div class="tab-pane fade" id="reportadas" role="tabpanel" aria-labelledby="reportadas-tab">
            {{#reportadas}}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{pregunta}}</h5>
                        <p class="card-text"><strong>Estado:</strong> {{estado}}</p>
                        <p class="card-text"><strong>Motivo:</strong> {{detalleReporte}}</p>
                        <div class="d-flex justify-content-end gap-2">
                            <form action="/quizgame/editor/alterarPregunta" method="POST" style="display: inline;">
                                <input type="hidden" name="accion" value="aprobar">
                                <input type="hidden" name="pregunta" value="{{pregunta}}">
                                <button type="submit" class="btn btn-success btn-sm">Aprobar</button>
                            </form>
                            <form action="/quizgame/editor/alterarPregunta" method="POST" style="display: inline;">
                                <input type="hidden" name="accion" value="rechazar">
                                <input type="hidden" name="pregunta" value="{{pregunta}}">
                                <button type="submit" class="btn btn-warning btn-sm">Rechazar</button>
                            </form>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modificarModal">
                                Modificar
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modificarModal" tabindex="-1" aria-labelledby="modificarModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modificarModal">Modificar Pregunta</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/quizgame/editor/modificarPregunta" method="POST">
                                    <input type="hidden" name="preguntaNombre" value="{{pregunta}}">
                                    <div class="mb-3">
                                        <label for="pregunta" class="form-label">Pregunta</label>
                                        <input type="text" name="preguntaModificada" class="form-control" value="" required>
                                    </div>
                                    <label class="form-label">Opciones:</label>
                                    <div class="mb-3">
                                        <input type="text" name="opciones[]" class="form-control mb-2" value="{{texto}}" required>
                                        <label>
                                            <input type="radio" name="es_correcta" value="{{id}}" {{#es_correcta}}checked{{/es_correcta}} />
                                            Correcta
                                        </label>
                                    </div>
                                    <div class="mb-3">
                                        <input type="text" name="opciones[]" class="form-control mb-2" value="{{texto}}" required>
                                        <label>
                                            <input type="radio" name="es_correcta" value="{{id}}" {{#es_correcta}}checked{{/es_correcta}} />
                                            Correcta
                                        </label>
                                    </div>
                                    <div class="mb-3">
                                        <input type="text" name="opciones[]" class="form-control mb-2" value="{{texto}}" required>
                                        <label>
                                            <input type="radio" name="es_correcta" value="{{id}}" {{#es_correcta}}checked{{/es_correcta}} />
                                            Correcta
                                        </label>
                                    </div>
                                    <div class="mb-3">
                                        <input type="text" name="opciones[]" class="form-control mb-2" value="{{texto}}" required>
                                        <label>
                                            <input type="radio" name="es_correcta" value="{{id}}" {{#es_correcta}}checked{{/es_correcta}} />
                                            Correcta
                                        </label>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-danger">Modificar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{/reportadas}}
        </div>
    </div>
</div>




