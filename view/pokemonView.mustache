<!-- Search and Add Pokemon Button -->
<div class="w3-container w3-padding">
    <form class="w3-section" method="POST" action="/app/pokedex/search">
        <input class="w3-input w3-border" type="text" name="search" placeholder="Buscar Pokémon por nombre o número">

        <button class="w3-button w3-teal" type="submit">Buscar</button>
    </form>
    <a href="/app/pokedex/addForm" class="w3-button w3-green w3-margin-bottom">Agregar Pokémon</a>
</div>

<!-- Pokemon List -->
<div class="w3-container">
    {{#message}}
        <div class="w3-yellow w3-padding w3-margin-bottom">
            <span>{{message}}</span>
        </div>
    {{/message}}
    <table class="w3-table w3-bordered w3-striped">
        <thead>
        <tr class="w3-teal">
            <th>#</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {{#pokemons}}
        <tr>
            <td>{{number}}</td>
            <td><a href="/app/pokedex/details/id={{id}}">{{name}}</a></td>
            <td><img src="{{image}}" alt="{{name}}" style="width: 50px;"></td>
            <td><img src="{{type}}" alt="{{type}}" style="width: 50px;"></td>
            <td>
                {{#user}}
                <a href="/app/pokedex/editForm/id={{id}}" class="w3-button w3-yellow">Modificar</a>
                <a href="/app/pokedex/delete/id={{id}}" class="w3-button w3-red">Borrar</a>
                {{/user}}
            </td>
        </tr>
        {{/pokemons}}
        </tbody>
    </table>
</div>
