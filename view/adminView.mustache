<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vista Administrador</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f9f9f9; /* Fondo claro */
            color: #333;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .section {
            margin-bottom: 40px;
        }
        h1, h2 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 18px;
        }
        table th, table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }
        table th {
            background-color: #4CAF50;
            color: white;
        }
        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        table tr:hover {
            background-color: #ddd;
        }
        canvas {
            max-width: 100%;
            margin: 0 auto;
            display: block;
        }
        .filters {
            text-align: center;
            margin-bottom: 20px;
        }
        .filters select {
            padding: 10px;
            font-size: 16px;
            margin: 0 5px;
        }
        .filters button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .filters button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Panel de Administrador</h1>

        <!-- Filtros -->
        <div>
            <form method="GET" action="http://localhost/quizgame/admin/mostrarAdminView">
             <label for="filtro">Filtrar por:</label>
                 <select id="filtro" name="filtro">
                 <option value="history"selected>Histórico</option>
                    <option value="day">Día</option>
                     <option value="month" >Mes</option>
                    <option value="year">Año</option>
                </select>
                <button type="submit">Aplicar</button>
            </form>
        </div>

        <!-- Sección de datos generales -->
        <div class="section">
            <h2>Estadísticas Generales</h2>
            <table>
                <thead>
                    <tr>
                        <th>Descripción</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Cantidad de jugadores</td>
                        <td>{{cantidad_jugadores}}</td>
                    </tr>
                    <tr>
                        <td>Cantidad de usuarios nuevos (filtro aplicado)</td>
                        <td>{{cantidad_usuarios_nuevos}}</td>
                    </tr>
                    <tr>
                        <td>Cantidad de preguntas en el juego</td>
                        <td>{{cantidad_preguntas_juego}}</td>
                    </tr>
                    <tr>
                        <td>Cantidad de preguntas creadas</td>
                        <td>{{cantidad_preguntas_creadas}}</td>
                    </tr>
                    <tr>
                        <td>Porcentaje de respuestas correctas</td>
                        <td>{{porcentaje_respuestas_correctas}}%</td>
                    </tr>
                    <tr>
                        <td>Cantidad de partidas jugadas</td>
                        <td>{{cantidad_partidas_jugadas}}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Sección de gráficos -->
        <div class="section">
            <h2>Usuarios por Sexo</h2>
            <canvas id="chartUsuariosPorSexo"></canvas>
        </div>

        <div class="section">
            <h2>Usuarios por Grupo de Edad</h2>
            <canvas id="chartUsuariosPorEdad"></canvas>
        </div>
    </div>

    <script>
        // Datos desde Mustache
        const usuariosPorSexo = JSON.parse('{{{usuarios_por_sexo}}}');
        const usuariosPorEdad = JSON.parse('{{{usuarios_por_edad}}}');

        // Gráfico: Usuarios por Sexo
        const labelsSexo = usuariosPorSexo.map(item => item.sexo);
        const dataSexo = usuariosPorSexo.map(item => item.cantidad);

        new Chart(document.getElementById('chartUsuariosPorSexo'), {
            type: 'pie',
            data: {
                labels: labelsSexo,
                datasets: [{
                    data: dataSexo,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'], // Colores
                }]
            },
            options: {
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function (tooltipItem) {
                                const label = tooltipItem.label || '';
                                const value = tooltipItem.raw || 0;
                                return `${label}: ${value}`;
                            }
                        }
                    }
                }
            }
        });

        // Gráfico: Usuarios por Grupo de Edad
        const labelsEdad = usuariosPorEdad.map(item => item.grupo);
        const dataEdad = usuariosPorEdad.map(item => item.cantidad);

        new Chart(document.getElementById('chartUsuariosPorEdad'), {
            type: 'bar',
            data: {
                labels: labelsEdad,
                datasets: [{
                    label: 'Cantidad de Usuarios',
                    data: dataEdad,
                    backgroundColor: '#4CAF50',
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Grupo de Edad'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Cantidad'
                        }
                    }
                }
            }
        });

        // Función para aplicar filtro (pendiente de implementación en backend)
        function applyFilter() {
            const filter = document.getElementById('filter').value;
            alert(`Filtro aplicado: ${filter}. Asegúrate de implementar el backend para soportarlo.`);
        }
    </script>
</body>
</html>