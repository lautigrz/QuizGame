{{#user}}
<section class="section about-section gray-bg py-5" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <!-- Columna de texto -->
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">{{usuario}}</h3>
                    
                    <div class="row about-list bg-light">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Nombre</label>
                                <p>{{nombre}}</p>
                            </div>
                          
                            <div class="media">
                                <label>Edad</label>
                                <p>22 Yr</p>
                            </div>
                            <div class="media">
                                <label>Residencia</label>
                                <p>Canada</p>
                            </div>
                            <div class="media">
                                <label>Address</label>
                                <p>California, USA</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                          <div class="media">
                                <label>Apellido</label>
                                <p>{{apellido}}</p>
                            </div>
                            <div class="media">
                                <label>E-mail</label>
                                <p>{{email}}</p>
                            </div>
                            <div class="media">
                                <label>Phone</label>
                                <p>820-885-3321</p>
                            </div>
                        
                            <div class="media">
                                <label>Genero</label>
                                <p>{{genero}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Columna de imagen -->
            <div class="col-lg-6">
                <div class="about-avatar text-left">
                    <img src="https://th.bing.com/th/id/R.36ddab8a092189b9094056f651659282?rik=8eL5YRLEFuLKpw&pid=ImgRaw&r=0" class="rounded-circle shadow-sm" alt="Profile Image" width="220" height="200">
                </div>
            </div>
        </div>

        <!-- Contador de estadÃ­sticas -->
        <div class="counter bg-light mt-5 py-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2 text-dark" data-to="500" data-speed="500">500</h6>
                        <p class="m-0 font-w-600">Happy Clients</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2 text-dark" data-to="150" data-speed="150">150</h6>
                        <p class="m-0 font-w-600">Projects Completed</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2 text-dark" data-to="850" data-speed="850">850</h6>
                        <p class="m-0 font-w-600">Photos Captured</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2 text-dark" data-to="190" data-speed="190">190</h6>
                        <p class="m-0 font-w-600">Telephonic Talks</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{/user}}